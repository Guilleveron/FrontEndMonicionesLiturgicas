cargarMoniciones('<%= ciclo%>', 'de cuaresma', "#cuaresma");
cargarMoniciones('A, B y C', 'del triduo pascual', "#triduo");
cargarMoniciones('<%= ciclo%>', 'Pascual', "#pascual1");
cargarMoniciones('A, B y C', 'Pascual', "#pascual2");

</script>
